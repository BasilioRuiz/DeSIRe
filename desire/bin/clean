#!/bin/csh

# ****************************************************************************
#
# File    : clean
# Project : DeSIRe
# Author  : epm@iac.es
# Purpose : Delete all of the output files generated by the program.
# Date    : 26/04/19
#
# ****************************************************************************


# RH output files.
rm  *.dat  *.out  >&  /dev/null
rm  -f  Temporary.atmos  Temporary_field.mod

# SIR output files.
rm  *_[1-9].mod  *_[1-9][0-9]*.mod  >&  /dev/null
rm  *_[1-9].per  *_[1-9][0-9]*.per  >&  /dev/null
rm  *_[1-9].hyd  *_[1-9][0-9]*.hyd  >&  /dev/null
rm  *.log  *.chi  spectrum_*  >&  /dev/null
rm  -f  background.ray  ray.input


# ****************************************************************************
